<div class = "errors">
  <% if @user.errors %>
  <%=@user.errors.full_messages.to_sentence %>
  <% end %>
</div>

<div class="container">

<div>
  <form action="/users/new" method="post">
    <input class="button" type="text" name="user[username]" placeholder="User Name" value="<%= @user.username %>"/>
    <input class="button" type="password" name="user[password]" placeholder="Password"/>
    <button class="button" type="submit" class="btn btn-success">Sign Up</button>
  </form>
</div>
</div>


